
{{# if betcarts}}
    <div class="row" style="margin-top:50px;">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">

        <ul class="list-group">
            {{# each betcarts }}
            <li class="list-group-item">
            
                <span class="badge" style="background-color:red;">{{ this.betamount }} P</span>
                <strong>{{ this.item.title }}</strong>

                <!-- <span class="label label-success">${{ betcarts.betamount }}</span> -->
                <div class="btn-group">
                    <button class="btn btn-primary btn-xs dropdown-toggle" type="button" data-toggle="dropdown">Action<span class="caret"></span></button>
                    <ul class="dropdown-menu">
                        <li><a href="/reducebet/{{this.item._id}}">Reduce by 1</a></li>
                        <li><a href="/removebet/{{this.item._id}}">Remove All</a></li>
                    </ul>
                </div>
            </li>
            {{/each}}
        </ul>



    </div>
</div>
<div class="row" style="text-align:center;">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3" style="margin-top:30px; margin-bottom:30px;">
    My Point :  <strong style="color:red;">{{ session.point }} P</strong>
    </div>

    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
       Total :  <strong style="color:red;">{{ totalBetAmount }} Point</strong>
    </div>
        <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
       Total Qty :  <strong style="color:green;">{{ totalBetQty }} Bet</strong>
    </div>



    </div>

</div>
<div class="row" style="text-align:center;">



<button class="btn btn-sm btn-success" data-toggle="modal" data-target="#myModal" style="margin-top:50px;">Betting Now</button>

    <!-- Modal HTML -->
    <div id="myModal" class="modal fade">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"
              aria-hidden="true">&times;</button>
            <h4 class="modal-title">{{ this.date }}</h4>
          </div>
          <div class="modal-body">
          <h1>{{ this.title }}</h1>

        <form action="/checkout2" method="post">
<div class="row" style="text-align:center;">
                <div class="col-xs-12">
                    <div class="form-group">
                        My Point :  <strong style="color:red;">{{ session.point }} P</strong>
                    </div>
                </div>

                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="remainpoint">After Betting : <strong style="color:red";> {{ afterBet }} P</label>
                        <input type="hidden" id="remainpoint" class="form-control" required name="remainpoint" value={{ afterBet }}>
                    </div>
                </div>

            <button type="submit" class="btn btn-success">Buy now</button>
        </div>
        </form>

          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

          </div>
        </div>
      </div>
    </div>

</div>




{{else}}
    <div class="row">
    <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
        <h2>No Items in Betting-List</h2>
    </div>
</div>
{{/if}}
</div>
